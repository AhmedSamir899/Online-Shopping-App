<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFunctions.My_Cart"
    android:background="@drawable/background_categories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:src="@drawable/back"
                android:layout_width="60dp"
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_centerVertical="true"/>
            <Button
                android:id="@+id/backpage"
                android:layout_width="60dp"
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="My Cart"
            android:textColor="#0C0C0C"
            android:textSize="36sp"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:textAllCaps="true"
            android:textAlignment="center"/>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewCart"
            android:layout_width="match_parent"
            android:layout_height="420dp">

        </androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

           <RelativeLayout
               android:layout_width="150dp"
               android:layout_height="wrap_content">

               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="45dp"
                   android:layout_alignParentLeft="true"
                   android:background="@drawable/delete_all_mycart" />
               <Button
                   android:id="@+id/DeleteAllItemCart"
                   android:layout_width="130dp"
                   android:layout_height="45dp"
                   android:background="#00000000"
                   android:layout_alignParentLeft="true"
                   android:text="Delete All"
                   android:textSize="15dp"
                   android:textStyle="bold"
                   android:textAllCaps="false"/>

               <ImageView
                   android:layout_centerVertical="true"
                   android:layout_marginRight="15dp"
                   android:layout_width="20dp"
                   android:layout_height="25dp"
                   android:layout_alignParentRight="true"
                   android:background="@drawable/delete_item_admin" />

           </RelativeLayout>



            <ImageView
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/addtocart" />
            <Button
                android:id="@+id/Sumbition"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:text="Sumbition"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/Total_Price"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="45dp"
                android:text="price"
                android:textColor="#FFEB3B"
                android:layout_marginRight="55dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="45dp"
                android:layout_marginRight="60dp"
                android:textSize="20dp"
                android:textColor="#4CAF50"
                android:text="$"/>


            <TextView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="80dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Total Price:"/>

        </RelativeLayout>
    </LinearLayout>


</ScrollView>