<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1c0202"
        tools:context=".AdminFunctions.admin_deleteuser_test">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/delete_user"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Delete Users"
                android:textSize="40dp"
                android:textAlignment="center"
                android:textColor="@color/cardview_light_background"/>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:hint="@string/select_User"
                android:textColorHint="@color/cardview_light_background"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_below="@+id/delete_user"  android:layout_marginBottom="109dp">
            <AutoCompleteTextView
                    android:id="@+id/auto_complete_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="@color/cardview_light_background"
                    android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>



        <ImageView
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"
                android:background="@drawable/login_reg_back" />
        <Button
                android:id="@+id/delete_Users"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"
                android:background="#00000000"
                android:text="Delete"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>




        <ImageView
                android:id="@+id/backpage"
                android:src="@drawable/back"
                android:layout_width="60dp"
                android:background="#00000000"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:padding="15dp"
                android:layout_centerVertical="true"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>