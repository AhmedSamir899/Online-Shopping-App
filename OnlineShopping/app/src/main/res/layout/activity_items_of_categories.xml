<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFunctions.ItemsOfCategories"
    android:background="@drawable/itemsbackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:src="@drawable/back"
                android:layout_width="60dp"
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_centerVertical="true"/>
            <Button
                android:id="@+id/backpage"
                android:layout_width="60dp"
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/itemnamesearch"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:hint="Enter item name"
                android:textColorHint="#2E2B35"/>

            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <ImageButton
                android:id="@+id/search_voice_btn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="90dp"
                android:scaleType="fitCenter"
                android:src="@drawable/voice"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/seach_camera_btn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camera"
                tools:ignore="MissingConstraints" />


        </RelativeLayout>

        <TextView
            android:id="@+id/Categorynamename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Items"
            android:textColor="#0C0C0C"
            android:textSize="36sp"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:textAllCaps="true"
            android:textAlignment="center"/>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewitems"
            android:layout_width="match_parent"
            android:layout_height="600dp">

        </androidx.recyclerview.widget.RecyclerView>




        <TextView
            android:id="@+id/itembarcodesearch"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:textColor="#00000000"
            android:layout_marginTop="-30dp"
            android:textColorHint="#00000000"/>

    </LinearLayout>


</ScrollView>